{
    "manifest_version": 3,
    "name": "Mail with GPT",
    "description": "your favorite assistant directly in your mail",
    "version": "1.0",
    "permissions": ["tabs",
      "activeTab",
      "scripting"
    ],
    "icons":
    {
     "128": "Logo.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "Logo.png"
    },
    "content_scripts": [
      {
        "js": ["script.js"],
        "matches": [
         "*://mail.google.com/*"
        ]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["popup.js"],
        
        "matches": ["<all_urls>"]
      }
    ]
  }
  